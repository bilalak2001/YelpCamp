<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center">Sign up</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/register" method="post">
            <div class="form-group" style="float:left;margin-right:20px;">
                <label for="loginEmail" class="col-lg-4 control-label">Username</label>
                <input class="form-control" id="loginEmail" type="text" name="username" placeholder="username">
            </div>
            <div class="form-group" style="float:left;margin-right:20px;">
                 <label for="loginPassword" class="col-lg-4 control-label">Password</label>
                <input class="form-control" id="loginPassword" type="password" name="password" placeholder="password">
            </div>
            <div class="form-group" style="float:left;margin-right:20px;">
                <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
                <a href="/campgrounds">Go Back</a>
            </div>
        </form>
    </div>
</div>
<% include ./partials/footer %>
